<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="News"
            type="com.example.news.News" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".NewsDetailActivity">

        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@{News.getTitle()}"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/headline"
            app:layout_constraintEnd_toEndOf="@id/headline"
            app:layout_constraintTop_toBottomOf="@id/headline"
            android:contentDescription="@string/news_imageurl"
            android:imageUrl="@{News.getImageUrl()}" />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:text="@{News.getSource()}"
            app:layout_constraintTop_toBottomOf="@id/newsImage"
            app:layout_constraintStart_toStartOf="@id/headline"
            android:textAlignment="textStart"
            android:padding="4dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@{News.getPublishedDate()}"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@id/headline"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/source"
            app:layout_constraintTop_toBottomOf="@id/newsImage" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/webView"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="@id/headline"
            app:layout_constraintTop_toBottomOf="@id/source"
            app:layout_constraintStart_toStartOf="@id/headline" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>